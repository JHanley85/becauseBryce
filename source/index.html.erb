<!-- Blog Post -->
<% blog.articles[0..5].each do |article| %>
<!-- Title -->
<h1> <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li></h1>

<!-- Author -->
<p class="lead">
  by <a href="#">BecauseBryce</a>
</p>

<hr>

<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span><%= article.date.strftime('%b %e') %></p>

<hr>

<!-- Preview Image -->
<img class="img-responsive" src="http://placehold.it/900x300" alt="">

<hr>

<!-- Post Content -->
    <%=article.body%>
<hr>
<%end%>